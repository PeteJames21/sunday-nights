---
layout: "base.njk"
---

<section class="author-section">
  <h3 class="author-title">Hi! I'm {{ name }}</h3>
  <img class="author-image" src="{{ image }}" alt="author image">
  <div class="author-content">{{ content | safe }}</div>
</section>
<section>
  <h3>My recent content</h3>
  <div>
    {% set posts = collections.post | filterByAuthor(name) %}
    {% for post in posts | reverse %}
      {% include "poem_snippet.njk" %}
    {% endfor %}
  </div>
</section>
