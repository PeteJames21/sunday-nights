<div>
  <article class="snippet">
    <a href="{{ post.url }}">
      <h5 class="snippet__title">{{ post.data.title }}</h5>
    </a>
    <img src="{{ post.data.image }}" alt="poem cover image" class="snippet__image">
    <p class="snippet__meta">by
      <span>{{ post.data.author }}</span>
      on
      <span>{{ post.data.date }}</span>
    </p>
    <p class="snippet__body">{{ post.templateContent | truncate(100) | safe }}</p>
    <a href="{{ post.url }}" class="btn btn--primary">
      Continue Reading</a>
  </article>
</div>
