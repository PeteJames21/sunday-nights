layout: "base.njk"

pagination:
  data: collections.post
  size: 2
  alias: posts
  reverse: true
permalink: "{% if pagination.pageNumber > 0 %}index/page-{{ pagination.pageNumber + 1 }}/{% endif %}index.html"
